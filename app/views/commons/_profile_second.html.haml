- if user == current_user
  .ui.cards
    .card.profile_wide
      .ui.top.attached.label.tac
        %i.user.icon
        %span= user.display_name
      .profile_image_content
        = image_tag user.avatar_image, class: 'profile_image'
      .content
        .description
          .div
            %i.birthday.icon
            %span #{user.birthday} (#{user.age || '?歳'})
          .div
            %i.venus.mars.icon
            %span= I18n.t("enum.genders.#{user.gender || 'unknown'}")
          .div
            %i.building.icon
            %span= user.join_age
          .div
            %i.phone.icon
            %span= user.phone
          .div
            %i.mail.icon
            %span= user.mail
      .ui.icon.buttons.bottom.attached.block
        = link_to edit_profile_path do
          .ui.top.left.button.wide_three_column
            %i.cog.icon
            %p 編集
        = link_to account_follows_path(user) do
          .ui.top.left.button.wide_three_column
            %i.user.icon
            %p フォロー
        = link_to account_followers_path(user) do
          .ui.top.left.button.wide_three_column
            %i.user.icon
            %p フォロワー
- else
  .ui.cards
    .card.profile_wide
      .ui.top.attached.label.tac
        %i.user.icon
        %span= user.display_name
      .profile_image_content
        = image_tag user.avatar_image, class: 'profile_image'
      .content
        .description
          .div
            %i.birthday.icon
            %span #{user.birthday} (#{user.age || '?歳'})
          .div
            %i.venus.mars.icon
            %span= I18n.t("enum.genders.#{user.gender || 'unknown'}")
          .div
            %i.building.icon
            %span= user.join_age
          .div
            %i.phone.icon
            %span= user.phone
          .div
            %i.mail.icon
            %span= user.mail
        .div.tac.margin_top_mini
          -if current_user&.has_followed?(user)
            = link_to account_unfollows_path(user), data: { method: 'post' } do
              %button.ui.basic.button
                %i.icon.user
                %font{:style => "vertical-align: inherit;"}
                  %font{:style => "vertical-align: inherit;"}
                    フォロー済み
          - else
            = link_to account_follows_path(user), data: { method: 'post' } do
              %button.ui.basic.button.blue
                %i.icon.user.plus
                %font{:style => "vertical-align: inherit;"}
                  %font{:style => "vertical-align: inherit;"}
                    フォローする
      .ui.icon.buttons.bottom.attached.block
        = link_to account_follows_path(user) do
          .ui.top.left.button.wide_two_column
            %i.user.icon
            %p フォロー
        = link_to account_followers_path(user) do
          .ui.top.left.button.wide_two_column
            %i.user.icon
            %p フォロワー