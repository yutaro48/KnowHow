.ui.secondary.pointing.menu
  = link_to posts_path do
    .item{class: "#{'active' if current_page?(posts_path)}"}
      %font{:style => "vertical-align: inherit;"}
        %font{:style => "vertical-align: inherit;"}
          ノウハウリスト
  = link_to timeline_path do
    .item{class: "#{'active' if current_page?(timeline_path)}"}
      %font{:style => "vertical-align: inherit;"}
        %font{:style => "vertical-align: inherit;"}
          タイムライン
  = link_to accounts_path do
    .item{class: "#{'active' if current_page?(accounts_path)}"}
      %font{:style => "vertical-align: inherit;"}
        %font{:style => "vertical-align: inherit;"}
          ユーザリスト
  - if current_page?(posts_path)
    .right.menu
      = form_tag posts_path, method: :get, class: 'ui action input' do
        = text_field_tag :q
        = button_tag :class => 'ui icon grey button' do
          %i.search.icon