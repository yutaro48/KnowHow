= render 'commons/leftsidebar', user: current_user

.wide_show
  .ui.pointing.menu
    .right.menu
      .item
        .ui.transparent.icon.input
          %input{:placeholder => "検索", :type => "text"}/
          %i.search.link.icon

  .wide_show_content
    = render 'layouts/flash_messages'
    .ui.two.item.menu
      = link_to posts_path, class: 'item active' do
        %font{:style => "vertical-align: inherit;"}
          %font{:style => "vertical-align: inherit;"} ノウハウ一覧
      %a.item
        %font{:style => "vertical-align: inherit;"}
          %font{:style => "vertical-align: inherit;"} タイムライン

    - @posts.each do |post|
      .ui.segment
        %p.ui.ribbon.blue.label= post.user.display_name
        .ui.relaxed.divided.list        
          = link_to post_path(id: post.id), class: 'item' do
            %i.large.book.middle.aligned.icon
            .content
              .header
                %font{:style => "vertical-align: inherit;"}
                  %font{:style => "vertical-align: inherit;"} 
                    = post.title
              .description
                %font{:style => "vertical-align: inherit;"}
                  %font{:style => "vertical-align: inherit;"} #{post.display_created_at}に更新

    .pagenation_block  
      .ui.pagination.menu
        %a.active.item
          %font{:style => "vertical-align: inherit;"}
            %font{:style => "vertical-align: inherit;"}
              1
        .disabled.item
          %font{:style => "vertical-align: inherit;"}
            %font{:style => "vertical-align: inherit;"}
              \..。
        %a.item
          %font{:style => "vertical-align: inherit;"}
            %font{:style => "vertical-align: inherit;"}
              10
        %a.item
          %font{:style => "vertical-align: inherit;"}
            %font{:style => "vertical-align: inherit;"}
              11
        %a.item
          %font{:style => "vertical-align: inherit;"}
            %font{:style => "vertical-align: inherit;"}
              12
