= render 'commons/header', user: current_user
.container
  = render 'commons/tab'

  .ui.grid
    .four.wide.column
      = render 'commons/profile_first', user: current_user

    .eight.wide.column
      .ui.segment
        .ui.top.attached.label.tac
          %i.users.icon
          %span ユーザーリスト
        .ui.three.column.grid
          - @users.each do |user|
            .column
              .ui.cards
                .card.profile_wide_mini
                  .ui.top.attached.label.tac
                    %span= user.display_name
                  .profile_image_content_mini
                    = image_tag user.avatar_image, class: 'profile_image_mini'
                  = link_to account_path(user) do
                    .ui.bottom.attached.button.profile_text
                      %font{:style => "vertical-align: inherit;"}
                        %font{:style => "vertical-align: inherit;"}
                          ユーザーページへ
                      %i.arrow.right.icon
        .margin_top
        .pagination
          = paginate @users

    .four.wide.column
      = render 'commons/history', histories: @histories

