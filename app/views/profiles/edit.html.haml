= render 'commons/leftsidebar', user: current_user

.wide_show
  .ui.pointing.menu
    = link_to posts_path, class: 'item' do
      %i.angle.left.icon
      %font{:style => "vertical-align: inherit;"}
        %font{:style => "vertical-align: inherit;"} 一覧へ戻る

  .ui.raised.segment
    %ul
      - @profile.errors.full_messages.each do |message|
        %li= message

    = form_with(model: @profile, url: profile_path, method: 'put', local: 'true') do |f|
      %div
        = f.label :name, '名前'
      %div
        = f.text_field :name
      %div
        = f.label :birthday, '生年月日'
      %div
        = f.date_field :birthday
      %div
        = f.label :gender, '性別'
      %div
        = f.select :gender, Profile.genders.keys, {}, { class: '' }
      %div
        = f.label :join, '入社年月日'
      %div
        = f.date_field :join
      %div
        = f.label :phone, '電話番号'
      %div
        = f.text_field :phone
      %div
        = f.label :email, 'メールアドレス'
      %div
        = f.text_field :email
      = f.submit '更新する', class: 'ui primary button'

    